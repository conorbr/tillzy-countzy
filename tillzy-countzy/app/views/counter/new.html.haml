%form#msform
  / fieldsets
  %fieldset
    %h2.fs-title Till Count
    %h3.fs-subtitle Enter Coins by Weight
    %input#e.in{:onkeyup => "converte('e'); getItems('total')", :placeholder => "2 Euro (g)"}/
    %input#ee.out{:onkeyup => "converte('ee')", :name => "output", :value => "0"}/
    %input#f.in{:onkeyup => "convertf('f'); getItems('total')", :placeholder => "1 Euro (g)"}/
    %input#ff.out{:onkeyup => "converte('ff')", :name => "output", :value => "0"}/
    %input#g.in{:onkeyup => "convertg('g'); getItems('total')", :placeholder =>".50 cent (g)"}/
    %input#gg.out{:onkeyup => "convertg('gg')", :name => "output", :value => "0"}/
    %input#h.in{:onkeyup => "converth('h'); getItems('total')", :placeholder => ".20 cent (g)"}/
    %input#hh.out{:onkeyup => "converth('hh')", :name => "output", :value => "0"}/
    %input#i.in{:onkeyup => "converti('i'); getItems('total')", :placeholder => ".10 cent (g)"}/
    %input#ii.out{:onkeyup => "converti('ii')", :name => "output", :value => "0"}/
    %input#j.in{:onkeyup => "convertj('j'); getItems('total')", :placeholder => ".05 cent (g)"}/
    %input#jj.out{:onkeyup => "convertj('jj')", :name => "output", :value => "0"}/
    %input#k.in{:onkeyup => "convertk('k'); getItems('total')", :placeholder => ".02 cent (g)"}/
    %input#kk.out{:onkeyup => "convertk('kk')", :name => "output", :value => "0"}/
    %input#l.in{:onkeyup => "convertl('l'); getItems('total')", :placeholder => ".01 cent (g)"}/
    %input#ll.out{:onkeyup => "convertl('ll')", :name => "output", :value => "0"}/
    .total-line
    %input#x.out{:onkeyup => "getItems('total')",:placeholder => "Add to Total", :name => "output", :value => "0"}
    %input#tot{:onkeyup => "getItems('total')", :value => "0"}/




