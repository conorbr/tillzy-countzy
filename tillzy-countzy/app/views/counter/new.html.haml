<script>
function converte(eurotwo) {
if (eurotwo == "e") {
ee = document.getElementById("e").value / 8.5 * 2;
document.getElementById("ee").value = Math.round(ee);
}
}

function convertf(euroone) {
if (euroone == "f") {
ff = document.getElementById("f").value / 7.5;
document.getElementById("ff").value = Math.round(ff);
}
}

function convertg(eurofifty) {
if (eurofifty == "g") {
gg = document.getElementById("g").value / 7.80;
document.getElementById("gg").value = (Math.round(gg) * .50) .toFixed(2);
}
}

function converth(eurotwent) {
if (eurotwent == "h") {
hh = document.getElementById("h").value / 5.74;
document.getElementById("hh").value = (Math.round(hh) * .20).toFixed(2);
}
}

function converti(euroten) {
if (euroten == "i") {
ii = document.getElementById("i").value / 4.10;
document.getElementById("ii").value = (Math.round(ii) * .10).toFixed(2);
}
}

function convertj(eurofive) {
if (eurofive == "j") {
jj = document.getElementById("j").value / 3.92;
document.getElementById("jj").value = (Math.round(jj) * .05).toFixed(2);
}
}

function convertk(eurotwocent) {
if (eurotwocent == "k") {
kk = document.getElementById("k").value / 3.06 * 2;
document.getElementById("kk").value = (Math.round(kk) * .02).toFixed(2);
}
}

function convertl(euroonecent) {
if (euroonecent == "l") {
ll = document.getElementById("l").value / 2.30 * 1;
document.getElementById("ll").value = (Math.round(ll) * .01).toFixed(2);
}
}

function getItems()
{
var items = document.getElementsByClassName("out");
var itemCount = items.length;
var total = 0;
for(var i = 0; i < itemCount; i++)
{
total = total + parseFloat(items[i].value);
}
document.getElementById('tot').value = total.toFixed(2);
}
</script>
